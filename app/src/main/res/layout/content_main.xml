<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="io.caprica.MainActivity"
    tools:showIn="@layout/activity_main">

    <ImageButton
        android:id="@+id/imageButtonFridge"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:elevation="4dp"
        android:onClick="openFridge"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:tint="@android:color/holo_blue_light"
        app:layout_constraintEnd_toStartOf="@+id/imageButtonTrashBin"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_fridge" />

    <ImageButton
        android:id="@+id/imageButtonTrashBin"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="140dp"
        android:layout_height="160dp"
        android:layout_marginEnd="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="40dp"
        android:background="@android:color/background_light"
        android:backgroundTint="@android:color/background_light"
        android:elevation="4dp"
        android:padding="8dp"
        android:scaleType="centerCrop"
        android:tint="@android:color/holo_blue_light"
        android:clickable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/imageButtonFridge"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_trash_bin" />
</android.support.constraint.ConstraintLayout>
